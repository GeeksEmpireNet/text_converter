<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duy.text_converter.pro">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Clip board filter -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <receiver android:name=".notification.StyleReceiver">
            <intent-filter>
                <action android:name="com.duy.text.converter.ACTION_STYLE_1" />
                <action android:name="com.duy.text.converter.ACTION_STYLE_2" />
                <action android:name="com.duy.text.converter.ACTION_STYLE_3" />
                <action android:name="com.duy.text.converter.ACTION_STYLE_4" />
            </intent-filter>
        </receiver>

    </application>

</manifest>